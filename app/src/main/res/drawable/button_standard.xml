<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:color="@android:color/transparent">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <size	android:height="@dimen/button_height"
                android:width="@dimen/button_width" />
        </shape>
    </item>

    <item android:state_enabled="false" android:color="@android:color/transparent">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <size	android:height="@dimen/button_height"
                android:width="@dimen/button_width" />
        </shape>
    </item>
</selector>